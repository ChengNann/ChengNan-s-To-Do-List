<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- 标题 -->
    <TextView
        android:id="@+id/textViewTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设置页"
        style="@style/TitleTextStyle"
        android:contentDescription="界面主题设置"
        android:importantForAccessibility="yes" />

    <Switch
        android:id="@+id/switchTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="深色模式"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- 设置项：任务排序方式 -->
    <TextView
        android:id="@+id/textViewSortOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="任务排序方式"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textColor="#333333"
        android:importantForAccessibility="yes"
        android:contentDescription="任务排序设置" />

    <Spinner
        android:id="@+id/spinnerSortOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:spinnerMode="dropdown" />

    <!-- 设置项：提醒开关 -->
    <TextView
        android:id="@+id/textViewReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提醒开关"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:textColor="#333333"
        android:importantForAccessibility="yes"
        android:contentDescription="提醒开关设置" />

    <Switch
        android:id="@+id/switchReminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启任务提醒"
        android:textColor="#000000"
        android:layout_marginTop="8dp" />

    <!-- 保存按钮 -->
    <Button
        android:id="@+id/buttonSaveSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存设置"
        android:layout_marginTop="32dp"
        android:minHeight="48dp"
        android:contentDescription="保存设置按钮"
        style="@style/ButtonStyle"/>

</LinearLayout>
